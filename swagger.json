          "transaction": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "transaction type",
                "example": "income"
              },
              "owner": {
                "type": "string",
                "description": "owner of operation",
                "example": "63a558d49aa31804e5d84653"
              }
            }
          }
        }
      },
      "incomeRequest": {
        "type": "object",
