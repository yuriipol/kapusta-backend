                "description": "user's email",
                "example": "mysite@ourearth.com"
              },
              "id": {
                "type": "string",
                "description": "user's id",
                "example": "63a558d49aa31804e5d84653"
              }
            }
          }
        }
      },
      "newBalanseResponse": {
        "type": "object",
        "required": [
          "email",
          "balance"
        ],
        "properties": {
          "email": {
            "type": "string",
            "description": "user's email",
            "example": "mysite@ourearth.com"
          },
          "balance": {
            "type": "number",
            "description": "changed user's balance",
            "example": 1987
          }
        }
      },
      "currentUser": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "user`s email",
            "example": "mysite@ourearth.com"
